# Server
PORT=3001
NODE_ENV=development

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/inflexion
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inflexion
DB_USER=user
DB_PASSWORD=password

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# News Aggregation (cron schedule)
AGGREGATION_CRON=*/30 * * * *

